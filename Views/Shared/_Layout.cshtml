<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webapp_travel_agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp_travel_agency.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.2/axios.min.js"></script>

</head>
<body>
    <header id="header" style="font-size: 20px; background-image: url(https://siviaggia.it/wp-content/uploads/sites/2/2017/09/bali-indonesia-cosa-vedere.jpg); height:550px; background-size:cover; background-position:top; top:0; left:0; filter: brightness(70%);">
        
        <nav style="background-image: linear-gradient(180deg, rgba(255,255,255,1), rgba(255,255,255,0.3) );" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent mb-3">
            <div class="container-fluid"  >
                <h3 >Si Vola!</h3>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav ">

                    <li class="nav-item">
                        <a class="nav-link text-dark" id="adminLink" asp-area=" " asp-controller="Home" asp-action="Index">Admin</a>
                    </li>
                </ul>
                
            </div>
        </nav>
        
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - webapp_travel_agency - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        let flag= false;
        if (window.location.pathname.split('/')[1] == "User" & window.location.pathname.split('/')[2] == "Details"){
            flag=true;
        }
        console.log(flag);
        if(flag == true){
            document.getElementById("header").style.height = "60px";
            document.getElementById("header").style.backgroundImage = "";
        }
        if (window.location.pathname.split('/')[1] == "Home"){
            document.getElementById("header").style.height = "60px";
            document.getElementById("header").style.backgroundImage = "";
            document.getElementById("adminLink").style.setProperty('color', 'red', 'important');
        }
    </script>
</body>
</html>
