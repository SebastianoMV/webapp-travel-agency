
@model Package

<div class="hero card my-3 py-3 container m-auto" style="position: relative;
    height: 300px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;">
    
    <div class="container d-flex justify-content-around position-relative"  >
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">Prezzo: @Model.Price</p>
        <p class="card-text">Giornate: @Model.Days</p>
        
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Indietro</a>
        </div>
        
            
    </div>
</div>
@if (Model.Messages.Count > 0)
{
    <div>Messaggi:</div>
    <table class="table container">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Nome</th>
                <th scope="col">Titolo</th>
                <th scope="col">Testo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Message message in Model.Messages)
            {
                <tr>
                    <td>@message.Email</td>
                    <td>@message.Name</td>
                    <td>@message.Title</td>
                    <td>@message.Text</td>
                </tr>
            }

        </tbody>
    </table>
}else{
    <div>Non ci sono messaggi inerenti a questo viaggio</div>
}

<style>
    .hero::before{
        content: "";
        background-image: url('@Model.Image');
        background-size: cover;
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        opacity: 0.5;
    }
</style>
