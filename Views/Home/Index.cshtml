
@{
    ViewData["Title"] = "Home Page";
}
@model List<Package>

<div class="text-center">
    <a class="btn btn-primary" href="@Url.Action("Create")">Crea nuovo viaggio</a>
    @if(Model.Count >0){

        <div class="row">
        
            @foreach(Package package in Model){


                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@package.Name</h5>
                            <p class="card-text">@package.Description</p>
                            <p class="card-text">@package.Price &euro;</p>
                            <p class="card-text">@package.Days</p>
                            <a href="@Url.Action("Details", "Home", new {Id= package.Id})" class="btn btn-primary">Dettagli</a>
                            <a href="@Url.Action("Update", "Home", new {Id= package.Id})" class="btn btn-primary">Dettagli</a>
                            <form asp-controller="Home" asp-action="Delete" asp-route-id="@package.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>

            }
        </div>

    }
    else{
        <h1> Non ci sono viaggi </h1>
    }
</div>
