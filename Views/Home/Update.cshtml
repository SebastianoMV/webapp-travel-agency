@model Package;

<form asp-controller="Home" asp-action="Update" method="post" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name">Nome </label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Nome">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descrizione">Descrizione </label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Descrizione ">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Prezzo </label>
        <input asp-for="Price" type="text" class="form-control" placeholder="Prezzo ">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Days">Prezzo </label>
        <input asp-for="Days" type="number" class="form-control" placeholder="Giorni ">
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>

    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>