
@model Package;

<form asp-controller="Home" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name">Nome Viaggio</label>
        <input asp-for="Name" type="text" class="form-control"  placeholder="Nome Viaggio">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Descrizione viaggio</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Descrizione viaggio">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImDaysage"></label>
        <input asp-for="Days" type="text" class="form-control" placeholder="Giorni">
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Prezzo viaggio</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Prezzo viaggio">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
